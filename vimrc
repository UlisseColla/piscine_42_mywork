" Enable line numbers and display them in the sidebar
set number

" Highlight the current line
set cursorline

" Enable syntax highlighting
syntax enable

" Enable incremental search
set incsearch

" Ignore case when searching
set ignorecase

" Enable smart case when searching
set smartcase

" Enable highlighting of search results
set hlsearch

" Enable mouse support
set mouse=a

" Set the number of lines to keep above and below the cursor
set scrolloff=3

" Enable fast scrolling
set ttyfast

" Increase the update interval for screen redraw
set updatetime=300

" Enable background operations
set hidden

" Set the default encoding
set encoding=utf-8

" Set the file format to Unix
set fileformat=unix

" Enable file type detection and plugins
filetype plugin on

